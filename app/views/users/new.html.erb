<%= form_with model: @user do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :height %><br>
  <%= f.number_field :height %><br>

  <%= f.label :happiness %><br>
  <%= f.number_field :happiness %><br>

  <%= f.label :nausea %><br>
  <%= f.number_field :nausea %><br>

  <%= f.label :tickets %><br>
  <%= f.number_field :tickets %><br>

  <%= f.label "Check box if you are a theme park owner"%>
  <%= f.check_box :admin, :id => "user_admin"  %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <br><br>
  <%= submit_tag "Create User" %>
<% end %>